          "install_application" : {
            "files" : {
              "/home/ec2-user/start-application" : {
                "content" : { "Fn::Join" : ["", [
                  "#!/bin/bash\n",
				  "sudo echo ", "export default { IPV4: ", ">> /var/log/env.js\n",
				  "export IPV4=$(curl http://169.254.169.254/latest/meta-data/public-ipv4)\n",
				  "sudo echo \\'$IPV4\\' >> /var/log/env.js\n",
				  "sudo echo ", "}", " >> /var/log/env.js\n",
                  "cd /home/ec2-user/flash-cards\n",
                  "sudo npm install\n",
				  "sudo nohup bash -c \"npm start\" &",
				  "disown $!\n",
                  "cd /home/ec2-user/archi-back\n",
                  "sudo /usr/local/bin/pip3 install Flask\n",
				  "sudo /usr/local/bin/pip3 install Flask_Cors\n",
				  "sudo /usr/local/bin/pip3 install mysqlclient\n",
				  "sudo nohup bash -c \"python3 src/server.py\" &",
				  "disown $!\n"
                ]]},
                "mode"  : "000500",
                "owner" : "root",
                "group" : "root"
              }
            },
            "commands" : {
              "01_start_application" : {
                "command" : "setsid /home/ec2-user/start-application >/dev/null 2>&1 < /dev/null &"
              },
			  "02_end_setup" : {
                "command" : "echo test > /var/log/install_end.log"
              }
            }
          }
        }
